<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:minHeight="88dp"
    android:orientation="vertical" >
    
    <!-- Head -->
    <LinearLayout android:orientation="horizontal" 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp" >
        
        <TextView
	        android:id="@+id/newsPubDateRow"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:layout_gravity="left"
	        android:paddingTop="2dp"
	        android:layout_marginLeft="2dp"
	        android:textSize="11dp"
	        android:textColor="@android:color/white"
	        android:textStyle="bold" />
        
        <RatingBar android:id="@+id/newsRatingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:paddingTop="3dp"
            android:layout_marginRight="10dp"
            android:numStars="5"
            style="?android:attr/ratingBarStyleSmall" />
        
    </LinearLayout>
    
    <!-- Body -->
    <LinearLayout android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center" >

	    <ImageView
	        android:id="@+id/newsImageRow"
	        android:layout_width="42dp"
	        android:layout_height="42dp"
	        android:layout_marginLeft="4dp"
	        android:layout_marginRight="2dp"
	        android:layout_gravity="center_vertical"
	        android:contentDescription="@string/newsImageDesc"
	        android:src="@drawable/icon_ua" />
	    
	    <LinearLayout android:orientation="vertical"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_gravity="left" >
	        
	        <TextView
	        	android:id="@+id/newsTitleRow"
	        	android:layout_width="fill_parent"
	        	android:layout_height="wrap_content"
	        	android:layout_marginLeft="4dp"
	        	android:textSize="12dp"
	        	android:textStyle="bold"
	        	android:textColor="@android:color/primary_text_dark" />
	        
	        <TextView
	        	android:id="@+id/newsDescRow"
	        	android:layout_width="fill_parent"
	        	android:layout_height="wrap_content"
	        	android:layout_marginLeft="4dp"
	        	android:textSize="10dp"
	        	android:textStyle="italic|bold"
	        	android:textColor="@android:color/secondary_text_dark" />
	        
	    </LinearLayout>
    
    </LinearLayout>

</LinearLayout>